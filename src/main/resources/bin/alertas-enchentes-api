#!/bin/bash

COMMAND=$1

case $COMMAND in
	start)
		nohup java -jar  alertas-enchentes-api-1.0.jar &
	;;
	stop)
		PID=$(ps aux | grep alertas-enchentes-api | grep -v grep | awk '{print $2}')
		if [ -n "${PID}" ]; then
			kill $PID
		fi 
	;;
	*)
		echo "Usage: ./alerta-enchentes-api <start|stop>"
	;;
esac